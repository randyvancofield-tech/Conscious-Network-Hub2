# Conscious Network Hub - Backend Environment Configuration
# Copy this file to .env.local and fill in your values

# Database Configuration (Prisma)
DATABASE_URL="file:./prisma/dev.db"

# Google Cloud Configuration
# IMPORTANT: Do NOT commit actual values to git!
# Use Application Default Credentials in development

# Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT=gen-lang-client-0656716269


# Google Cloud Region for Vertex AI
# Available regions: us-central1, us-west4, europe-west4, asia-southeast1, etc.
GOOGLE_CLOUD_REGION=us-central1

# Optional: Specific Vertex AI model to use
# Default: gemini-1.5-flash-001
# Other options: gemini-1.5-pro-001, etc.
VERTEX_AI_MODEL=gemini-1.5-flash-001

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
# Example: http://localhost:5173,http://localhost:3000,https://yourdomain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
# Maximum requests per 15-minute window
RATE_LIMIT_MAX=100

# Google Cloud Authentication
# For development: Set this to path of your service account JSON
# For production: Use Application Default Credentials (automatically detected)
# DO NOT commit service account JSON files to git!
# Example: /path/to/service-account-key.json
# GOOGLE_APPLICATION_CREDENTIALS=

# Logging
LOG_LEVEL=info

# Optional: API Key for frontend (if using alternative auth)
# FRONTEND_API_KEY=your-optional-api-key
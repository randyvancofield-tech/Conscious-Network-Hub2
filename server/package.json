    "description": "Backend API for Conscious Network Hub - Vertex AI/Gemini integration",
    "main": "dist/index.js",
    "type": "commonjs",
    "scripts": {
        "dev": "nodemon --exec ts-node src/index.ts",
        "build": "tsc",
        "start": "npm run build && node dist/index.js",

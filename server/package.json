        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.7",
        "openai": "^6.18.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/multer": "^1.4.12",
        "@types/node": "^20.10.5",
        "@types/nodemailer": "^6.4.14",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "prisma": "^6.19.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"

# Frontend environment template
# Local backend default
VITE_BACKEND_URL=http://localhost:3001
# Safety default: in development, ignore remote backend URLs unless explicitly allowed.
VITE_ALLOW_REMOTE_BACKEND_IN_DEV=false
# Reliability guardrail: keep signup 2FA enrollment disabled until full OTP/provider flows are operational.
VITE_ENABLE_SIGNUP_2FA=false

# Wallet verification/session endpoints
VITE_WALLET_CHALLENGE_URL=/api/wallet/challenge
VITE_WALLET_VERIFY_URL=/api/wallet/verify
VITE_WALLET_SESSION_URL=/api/wallet/session
VITE_WALLET_LOGOUT_URL=/api/wallet/logout
VITE_WALLET_REWARD_SIGN_URL=/api/wallet/rewards/sign

# Blockchain network + contracts
VITE_BLOCKCHAIN_NETWORK_ID=1
VITE_HCN_CREDITS_CONTRACT_ADDRESS=
VITE_HCN_PROFILE_ANCHOR_CONTRACT_ADDRESS=

# IPFS profile metadata upload + retrieval
VITE_IPFS_UPLOAD_PROVIDER=pinata
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs
VITE_PINATA_JWT=
VITE_PINATA_PIN_JSON_URL=https://api.pinata.cloud/pinning/pinJSONToIPFS
VITE_INFURA_PROJECT_ID=
VITE_INFURA_PROJECT_SECRET=
VITE_INFURA_ADD_URL=https://ipfs.infura.io:5001/api/v0/add?pin=true
VITE_IPFS_PIN_JSON_URL=
VITE_IPFS_PIN_JSON_TOKEN=
